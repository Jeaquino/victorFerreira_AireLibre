<%- include('../partials/head',{title:'Lista'}) %>

  <body>
    <header class="header">

      <nav>

        <ul>
          <li><a href="/users/register">Agregar</a></li>

          <li><a href="/users/list">Lista de usuarios</a></li>
        </ul>
      </nav>
      <a href="/">
        <i class="fa-solid fa-person-walking-arrow-right"></i>
      </a>

    </header>

    <main>
      <h1>Usuarios</h1>

    
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Correo</th>
            <th>Contrase√±a</th>
            <th>Rol</th>
            <th>Imagen</th>
          </tr>
        </thead>

        <tbody>

          <% user.forEach(({ id,surname,password, mail, name,image, rolId})=> { %>

            <tr>

              <th>

                <%= id %>
              </th>

              <th>
                  <%= name %>
              </th>

              <th>
                <%= surname %>
              </th>
              <th>
                <%= mail %>
              </th>
              <th>
                <%= password %>
              </th>
              <th>
                <%= rolId %>
              </th>
              <th>
                <%= image %>
              </th>
            </tr>
            
              <th>
                
                  <a href="/users/edit/<%= id %>">
                    <button type="submit" class="btnedit"> Editar</button>
                  </a>
                
              </th>
            
              <th>
                
                  <a href="/users/edit/<%= id %>">
                    <button type="submit" class="btnremove">Eliminar</button>
                  </a>
                
              </th>
            
            <% }) %>

        </tbody>
      </table>



    </main>
    <%- include('../partials/footer') %>
  </body>