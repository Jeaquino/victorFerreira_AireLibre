<%- include('../partials/head',{title:"Edicion Usuarios"}) %>

    <body>
        <header class="header">
            <h1>Aire Libre</h1>
            <nav>

                <ul>
                    <li><a href="/users/admin">Administrador</a></li>
                    <li><a href="/users/register">Agregar</a></li>

                </ul>
            </nav>


            <p>Vive tu propia Aventura!!!</p>
        </header>
        <main>
            <a href="/users/list">
                <button class="volver">Volver</button>
            </a>
            <form action="/users/update/<%= user.id %>?_method=PUT " method="POST">
                <div class="form-group">
                    <label for="name">Nombre</label>
                    <input type="text" name="name" required value="<%= user.name %>">
                </div>

                <div class="form-group">
                    <label for="surname">Apellido</label>
                    <input type="text" name="surname" required value="<%= user.surname %>">
                </div>

                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <input type="password" name="password" required value="<%= user.password %>">
                </div>
                <div class="form-group">
                    <label for="password2">Confirmar Contraseña</label>
                    <input type="password" name="password2" required value="<%= user.password2 %>">
                </div>

                <div class="form-group">
                    <label for="mail">Correo electronico</label>
                    <input type="text" name="mail" required value="<%= user.mail %>">
                </div>
                <div class="form-group">
                    <label for="rolId">Rol</label>
                    <select name="rolId" id="rolId">
                        <% rol.forEach(r=> { %>
                            <option value="<%= r.id %>" <%=r.id==user.rol && 'selected' %>><%= r.name %>
                            </option>
                            <% }) %>

                </div>

                <div class="registrarse">
                    <button type="submit"> Editar Usuario</button>
                </div>

            </form>
            <div class="boton_remove">
                <form action="/users/remove/<%= user.id %>?_method=DELETE" method="POST">
                    <button type="submit" onclick="return confirm('¿Deseas eliminar usuario?')">Eliminar
                        Usuario</button>
                </form>

            </div>

        </main>

        <footer class="footer">
        </footer>
    </body>

    </html>